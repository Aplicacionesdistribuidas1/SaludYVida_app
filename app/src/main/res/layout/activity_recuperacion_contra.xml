<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s"
    tools:context="com.camape.b_ware.RecuperacionContra">

    <Button
        android:id="@+id/btnAcep"
        android:layout_width="103dp"
        android:layout_height="54dp"
        android:background="@drawable/com_facebook_button_send_background"
        android:text="Aceptar"
        android:textColor="@color/com_facebook_button_login_silver_background_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.89" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="356dp"
        android:layout_height="66dp"
        android:layout_marginTop="283dp"
        android:text="Ingrese el e-mail con el que se registro "
        android:textColor="?android:attr/fastScrollTextColor"
        android:textSize="19sp"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/txtCorreorecu"
        android:layout_width="315dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/com_facebook_button_login_silver_background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.718" />
</android.support.constraint.ConstraintLayout>
